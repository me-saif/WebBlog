@model IEnumerable<Post>

@{

}
<h2>Home Page</h2>

<img src="~/content/static/wp-wallpapers.png" alt="Alternate Text" width="500"/>

<div>
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">@post.Title</a>
            </li>
        }
    </ul>
</div>